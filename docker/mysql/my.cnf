[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# Security & Compliance Settings
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
local_infile = 0
skip_show_database = 1

# Connection Settings
max_connections = 200
max_user_connections = 150
wait_timeout = 28800
interactive_timeout = 28800
connect_timeout = 10

# Character Set & Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# InnoDB Settings for Performance & Security
default_storage_engine = InnoDB
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50
innodb_file_per_table = 1

# Query Cache (legacy, but useful for read-heavy workloads)
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Logging for Audit & Security
log_error = /var/log/mysql/error.log
log_warnings = 2
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Binary Logging for Replication & Point-in-time Recovery
server-id = 1
log-bin = mysql-bin
binlog-format = ROW
binlog_expire_logs_seconds = 604800  # 7 days
max_binlog_size = 100M
sync_binlog = 1

# General Query Log (disable in production)
general_log = 0
general_log_file = /var/log/mysql/general.log

# SSL/TLS Configuration (for production)
# ssl-ca = /etc/mysql/ssl/ca-cert.pem
# ssl-cert = /etc/mysql/ssl/server-cert.pem
# ssl-key = /etc/mysql/ssl/server-key.pem
# require_secure_transport = ON

# Encryption at Rest (MySQL 8.0+ - uncomment for production)
# default_table_encryption = ON
# innodb_encrypt_tables = ON
# innodb_encrypt_log = ON
# innodb_encrypt_online_alter_logs = ON

# Table Definition Cache
table_definition_cache = 1400
table_open_cache = 2000

# Thread Settings
thread_cache_size = 10
thread_stack = 256K

# MyISAM Settings (for system tables)
key_buffer_size = 32M
myisam_recover_options = BACKUP,FORCE

# Temporary Tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Sort & Join Settings
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 4M

[mysql]
default-character-set = utf8mb4

[mysqldump]
quick
quote-names
max_allowed_packet = 16M

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock
```

